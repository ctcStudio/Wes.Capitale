<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matbangtangdienhinh_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/matbangtangdienhinh_header"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_heightPercent="11.574%"
        android:scaleType="fitXY"
        android:src="@drawable/background_header" />

    <ImageView
        android:id="@+id/matbangtangdienhinh_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/matbangtangdienhinh_header"
        android:layout_alignTop="@+id/matbangtangdienhinh_header"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:src="@drawable/matbangtangdienhinh_title_c1" />

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/matbang_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/matbangtangdienhinh_footer"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/matbangtangdienhinh_header"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/matbangtangdienhinh_map_c1" />

    <include
        layout="@layout/layout_navigation_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/matbangtangdienhinh_header"
        android:layout_alignTop="@+id/matbangtangdienhinh_header" />

    <LinearLayout
        android:id="@+id/matbangtangdienhinh_footer"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_heightPercent="6.02%"
        android:background="@drawable/background_footer"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_ch1phongngu"
            style="@style/Button_MatBangTangDienHinh"
            android:src="@drawable/matbangtangdienhinh_text_button_ch1phongngu" />

        <ImageView
            android:id="@+id/button_ch2phongngu"
            style="@style/Button_MatBangTangDienHinh"
            android:src="@drawable/matbangtangdienhinh_text_button_ch2phongngu" />

        <ImageView
            android:id="@+id/button_ch3phongngu"
            style="@style/Button_MatBangTangDienHinh"
            android:src="@drawable/matbangtangdienhinh_text_button_ch3phongngu" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
