<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_noithat"
            style="@style/Button_360"
            android:src="@drawable/virtual360_button_noithat" />

        <View style="@style/BanDoDuAn_Divider" />

        <ImageView
            android:id="@+id/button_tienich"
            style="@style/Button_360"
            android:src="@drawable/virtual360_button_tienich" />

        <View style="@style/BanDoDuAn_Divider" />

        <ImageView
            android:id="@+id/button_tongthe"
            style="@style/Button_360"
            android:src="@drawable/virtual360_button_tongthe" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tongthe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/layout_button"
        android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/button_tongthe_ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:onClick="onClick"
                android:padding="4dp"
                android:src="@drawable/s1" />

            <ImageView
                android:id="@+id/button_tongthe_dem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:onClick="onClick"
                android:padding="4dp"
                android:src="@drawable/s2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tienich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_button"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_tienich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="UNKNOWN_DATA_0x0" />
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_noithat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/layout_button"
        android:background="@drawable/matbangchoncan_background"
        android:clickable="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/matbangcanho_header"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_heightPercent="11.754%"
            android:scaleType="fitXY"
            android:src="@drawable/background_header" />

        <ImageView
            android:id="@+id/matbangcanho_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/matbangcanho_header"
            android:layout_alignTop="@+id/matbangcanho_header"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:src="@drawable/virtual360_noithat_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_noithat_1phongngu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/virtual360_textbutton_ch1phongngu" />

            <ImageView
                android:id="@+id/button_noithat_2phongngu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/virtual360_textbutton_ch2phongngu" />

            <ImageView
                android:id="@+id/button_noithat_3phongngu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/virtual360_textbutton_ch3phongngu" />
        </LinearLayout>

        <ImageView
            android:id="@+id/matbangcanho_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_footer"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:orientation="horizontal" />
    </android.support.percent.PercentRelativeLayout>
</merge>
